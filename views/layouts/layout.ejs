            <li ng-show="userLogged"><a href="/">{{ userLogged }}</a></li>
            <li ng-hide="userLogged"><a href="/">Log In</a></li>
            <li ng-hide="userLogged"><a href="/join">Sign Up</a></li>
          </ul>
        </div><!--/.nav-collapse -->
