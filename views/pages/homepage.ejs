<div id="homepage" :class="[heroHeightSet ? '' : 'uninitialized']" v-cloak>
  <div class="hero d-flex flex-column justify-content-center" full-page-hero>
    <div class="container">
      <div class="row flex-center">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 jumbotron">
          <h1 align="center"><small class="white-text">URL Shortener for cool people.</small></h1>
          <br>
          <div id="url-form" class="flex-center row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-11 text-center">
              <form>
                <div class="form-group">
                  <label>Paste your long URL here</label>
                  <input class="form-control input-lg" type="text" placeholder="http://" required>
                </div>
                <div class="form-group">
                  <label>Custom alias (optional)</label>
                  <input class="form-control input-lg" type="text">
                </div>
                <div class="form-group">
                  <label>Password (optional)</label>
                  <input class="form-control input-lg" type="password">
                </div>
                <div class="form-group">
                  <label>Email (optional)</label>
                  <input class="form-control input-lg" type="email">
                </div>
                <div class="form-group">
                  <label class="checkbox-inline"><input type="checkbox">Email alerts</label>
                  <label class="checkbox-inline"><input type="checkbox">Telegram alerts</label>
                  <label class="checkbox-inline"><input type="checkbox">Request captcha</label>
                </div>
                <br>
                <div align="center">
                  <button type="submit" class="btn btn-primary btn-lg">Shorten URL</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div id="url-result" class="row flex-center">
        <div class="col-xs-11 col-sm-10 col-md-8 col-lg-7 text-center alert alert-success" role="alert">
          <h3>Linky created: <a class="alert-link">{{ newUrlData.url }}</a></h3>
          <div>
            <h4 >Send that to <a href="https://telegram.me/LinkyURLbot">@LinkyURLbot</a> to enable Telegram alerts:</h4>
            <pre>{{ newUrlData.telecommand }}</pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
